<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SyncfusionMAUIApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SyncfusionMAUIApp1"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Main Categories" >
        <Tab>
            <ShellContent Title="Categories" ContentTemplate="{DataTemplate local:MainCategory}" Route="MainCategory"></ShellContent>
        </Tab>

    </FlyoutItem>

    <FlyoutItem Title="Product Categories" >
        <Tab>
            <ShellContent Title="Categories" ContentTemplate="{DataTemplate local:ProductCategory}" Route="ProductCategory"></ShellContent>
        </Tab>
        
    </FlyoutItem>
    <FlyoutItem Title="Product Categories" >
        <Tab>
            <ShellContent Title="Categories" ContentTemplate="{DataTemplate local:ProductSubCategoryHorizontal}" Route="ProductSubCategoryHorizontal"></ShellContent>
        </Tab>

    </FlyoutItem>

</Shell>
